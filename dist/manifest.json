{
	"name": "Cetus",
	"version": "2.0",
	"description": "Dynamic analysis extension for WASM",
	"manifest_version": 2,
	"content_scripts": [
		{
			"js": [
				"content/content.js"
			],
			"matches": [
				"<all_urls>"
			],
			"all_frames": true,
			"run_at": "document_start"
		}
	],
	"permissions": [
		"activeTab",
		"storage"
	],
	"web_accessible_resources": [
		"content/cetus.js",
		"content/init.js",
		"shared/wail.min.js/wail.min.js",
		"shared/utils.js",
		"content/thirdparty/stacktrace/stacktrace.min.js"
	],
	"browser_action": {
		"default_title": "Cetus",
		"default_popup": "extension/popup.html"
	},
	"devtools_page": "extension/devtools.html",
	"background": {
		"page": "extension/background.html",
		"persistent": true
	},
	"icons": {
		"16": "icons/cetus16.png",
		"48": "icons/cetus48.png",
		"128": "icons/cetus128.png"
	},
	"content_security_policy": "default-src 'self' https://dev.cetus.com:3000/; script-src 'self' https://dev.cetus.com:3000/ 'unsafe-eval'; object-src 'self'; connect-src wss://dev.cetus.com:3000 https://dev.cetus.com:3000/; style-src * 'unsafe-inline' 'self' blob:; img-src 'self' data:;"
}